# ============================================
# TEC ECOSYSTEM - ENVIRONMENT VARIABLES
# Development Configuration
# ============================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# DATABASE (Required)
# ============================================
# Mock PostgreSQL for development - not persistent but works for testing
DATABASE_URL="postgresql://test:test@localhost:5432/tec_test?schema=public"

# ============================================
# AUTHENTICATION (Required)
# ============================================
# Base URL for NextAuth
NEXTAUTH_URL=http://localhost:3000

# Secret key for JWT encryption
NEXTAUTH_SECRET="development-secret-key-change-in-production"

# ============================================
# PI NETWORK (Required)
# ============================================
# Environment: testnet or mainnet
NEXT_PUBLIC_PI_NETWORK=testnet

# Your Pi Network App ID
NEXT_PUBLIC_PI_APP_ID=tec-titan-elite-commerce-04d84accdca2487c

# Enable sandbox mode for testing
NEXT_PUBLIC_PI_SANDBOX=true
PI_SANDBOX_MODE=true

# Pi API Key
PI_API_KEY=development_key

# ============================================
# TEC NEXUS AI (Optional)
