{
  "name": "tec-ecosystem",
  "version": "1.0.0",
  "description": "TEC (Titan Elite Commerce) - 24 luxury business domains powered by Pi Network & Sovereign AI Factory",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:generate": "jsdoc -c jsdoc.json",
    "postinstall": "prisma generate && husky install",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset && npm run db:seed",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:governance": "cross-env NODE_OPTIONS=--experimental-vm-modules npx -y jest@29.7.0 --config jest.governance.config.cjs",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:playwright": "playwright test",
    "test:all": "npm run test:coverage && npm run test:playwright",
    "ai:run": "node index.js",
    "ai:generate-services": "node ai-agent/services/generateServices.js",
    "ai:build": "echo 'Sovereign AI Build Initiated...'"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@swc/helpers": "0.5.18",
    "autoprefixer": "^10.4.23",
    "i18next": "^25.7.3",
    "next": "15.5.9",
    "next-auth": "^4.24.13",
    "next-i18next": "^15.4.3",
    "node-fetch": "^3.3.2",
    "openai": "^6.15.0",
    "postcss": "^8.5.6",
    "prisma": "^6.1.0",
    "react": "latest",
    "react-dom": "latest",
    "react-i18next": "^16.5.0",
    "tailwindcss": "^3.4.19",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@playwright/test": "^1.57.0",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.9",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
