generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  piId          String    @unique
  username      String
  email         String?   @unique
  walletAddress String?   @unique
  tier          String    @default("STANDARD")
  status        String    @default("ACTIVE")
  language      String    @default("en")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  payments      Payment[]
  nfts          NFT[]
  
  @@index([piId])
  @@index([tier])
  @@map("users")
}

model Payment {
  id            String        @id @default(cuid())
  userId        String
  amount        Float
  currency      String        @default("PI")
  piTxId        String?       @unique
  status        String        @default("PENDING")
  domain        String
  category      String
  description   String?
  metadata      Json?
  createdAt     DateTime      @default(now())
  completedAt   DateTime?
  user          User          @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@map("payments")
}

model NFT {
  id              String    @id @default(cuid())
  tokenId         String    @unique
  userId          String
  domainName      String
  certificateType String    @default("ownership")
  metadata        Json
  imageUrl        String?
  mintedAt        DateTime  @default(now())
  txHash          String?
  status          String    @default("MINTING")
  user            User      @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([domainName])
  @@map("nfts")
}

model Product {
  id          String      @id @default(cuid())
  domain      String      // estate, commerce, explorer, fundx, etc.
  title       String
  description String
  price       Float
  currency    String      @default("PI")
  images      String[]    // Array of image URLs
  category    String
  subcategory String?
  
  // Domain-specific fields (stored as JSON)
  specifications Json?     // e.g., {bedrooms: 3, bathrooms: 2, sqm: 150}
  location       Json?     // e.g., {city: "Dubai", country: "UAE", lat: 25.2, lng: 55.2}
  
  stock       Int         @default(1)
  status      String      @default("ACTIVE") // ACTIVE, SOLD, PENDING
  sellerId    String
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  cartItems   CartItem[]
  orderItems  OrderItem[]
  
  @@index([domain])
  @@index([category])
  @@index([status])
  @@index([sellerId])
  @@map("products")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  @@map("carts")
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  productId String
  quantity  Int      @default(1)
  
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@unique([cartId, productId])
  @@map("cart_items")
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  orderNumber String      @unique
  
  total       Float
  currency    String      @default("PI")
  
  piPaymentId String?
  piTxId      String?
  
  status      String      @default("PENDING") // PENDING, PAID, PROCESSING, SHIPPED, DELIVERED, CANCELLED
  
  items       OrderItem[]
  
  // Shipping info (if applicable)
  shippingInfo Json?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  paidAt      DateTime?
  
  @@index([userId])
  @@index([status])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  
  quantity  Int
  price     Float   // Price at time of purchase
  
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}
