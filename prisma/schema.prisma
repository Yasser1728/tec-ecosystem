generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  piId          String    @unique
  username      String
  email         String?   @unique
  walletAddress String?   @unique
  tier          String    @default("STANDARD")
  status        String    @default("ACTIVE")
  language      String    @default("en")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  payments      Payment[]
  nfts          NFT[]
  
  @@index([piId])
  @@index([tier])
  @@map("users")
}

model Payment {
  id            String        @id @default(cuid())
  userId        String
  amount        Float
  currency      String        @default("PI")
  piTxId        String?       @unique
  status        String        @default("PENDING")
  domain        String
  category      String
  description   String?
  metadata      Json?
  createdAt     DateTime      @default(now())
  completedAt   DateTime?
  user          User          @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@map("payments")
}

model NFT {
  id              String    @id @default(cuid())
  tokenId         String    @unique
  userId          String
  domainName      String
  certificateType String    @default("ownership")
  metadata        Json
  imageUrl        String?
  mintedAt        DateTime  @default(now())
  txHash          String?
  status          String    @default("MINTING")
  user            User      @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([domainName])
  @@map("nfts")
}

model Product {
  id          String      @id @default(cuid())
  domain      String      // estate, commerce, explorer, fundx, etc.
  title       String
  description String
  price       Float
  currency    String      @default("PI")
  images      String[]    // Array of image URLs
  category    String
  subcategory String?
  
  // Domain-specific fields (stored as JSON)
  specifications Json?     // e.g., {bedrooms: 3, bathrooms: 2, sqm: 150}
  location       Json?     // e.g., {city: "Dubai", country: "UAE", lat: 25.2, lng: 55.2}
  
  stock       Int         @default(1)
  status      String      @default("ACTIVE") // ACTIVE, SOLD, PENDING
  sellerId    String
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  cartItems   CartItem[]
  orderItems  OrderItem[]
  
  @@index([domain])
  @@index([category])
  @@index([status])
  @@index([sellerId])
  @@map("products")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  @@map("carts")
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  productId String
  quantity  Int      @default(1)
  
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@unique([cartId, productId])
  @@map("cart_items")
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  orderNumber String      @unique
  
  total       Float
  currency    String      @default("PI")
  
  piPaymentId String?
  piTxId      String?
  
  status      String      @default("PENDING") // PENDING, PAID, PROCESSING, SHIPPED, DELIVERED, CANCELLED
  
  items       OrderItem[]
  
  // Shipping info (if applicable)
  shippingInfo Json?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  paidAt      DateTime?
  
  @@index([userId])
  @@index([status])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  
  quantity  Int
  price     Float   // Price at time of purchase
  
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}

// Business Units Management
model BusinessUnit {
  id          String   @id @default(cuid())
  key         String   @unique // fundx, explorer, commerce, etc.
  name        String   // FundX, Explorer, Commerce
  displayName String   // FundX.pi, Explorer.pi
  icon        String
  tagline     String
  description String
  color       String   // Gradient colors
  status      String   @default("ACTIVE") // ACTIVE, MAINTENANCE, COMING_SOON
  
  // Analytics
  views       Int      @default(0)
  visits      Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  pages       BusinessUnitPage[]
  features    BusinessUnitFeature[]
  
  @@index([key])
  @@index([status])
  @@map("business_units")
}

model BusinessUnitPage {
  id             String       @id @default(cuid())
  businessUnitId String
  path           String       // /start, /strategies, /calculator
  title          String
  description    String
  views          Int          @default(0)
  
  businessUnit   BusinessUnit @relation(fields: [businessUnitId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  @@unique([businessUnitId, path])
  @@index([businessUnitId])
  @@map("business_unit_pages")
}

model BusinessUnitFeature {
  id             String       @id @default(cuid())
  businessUnitId String
  icon           String
  title          String
  description    String
  order          Int          @default(0)
  
  businessUnit   BusinessUnit @relation(fields: [businessUnitId], references: [id], onDelete: Cascade)
  
  @@index([businessUnitId])
  @@map("business_unit_features")
}

// User Activity Tracking
model UserActivity {
  id             String   @id @default(cuid())
  userId         String
  businessUnit   String   // fundx, explorer, etc.
  page           String   // /fundx/strategies
  action         String   // VIEW, CLICK, PURCHASE, etc.
  metadata       Json?
  
  createdAt      DateTime @default(now())
  
  @@index([userId])
  @@index([businessUnit])
  @@index([createdAt])
  @@map("user_activities")
}

// Subscriptions for Business Units
model Subscription {
  id             String   @id @default(cuid())
  userId         String
  businessUnit   String   // fundx, explorer, etc.
  plan           String   // FREE, BASIC, PREMIUM, ENTERPRISE
  status         String   @default("ACTIVE") // ACTIVE, CANCELLED, EXPIRED
  
  startDate      DateTime @default(now())
  endDate        DateTime?
  
  amount         Float?
  currency       String   @default("PI")
  piTxId         String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([userId])
  @@index([businessUnit])
  @@index([status])
  @@map("subscriptions")
}

// Forensic Audit Logs
model AuditLog {
  id               String   @id @default(cuid())
  userId           String?
  operationType    String
  operationData    Json
  approved         Boolean
  rejectionReason  String?
  hash             String   @unique
  
  // Identity Check Results
  identityVerified Boolean
  identityReason   String?
  
  // Validation Results
  operationValid   Boolean
  validationErrors String[]
  riskLevel        String
  
  // Suspicion Results
  suspicious       Boolean
  suspicionIndicators String[]
  threatLevel      String?
  
  // Request Metadata
  requestIp        String?
  requestUserAgent String?
  requestOrigin    String?
  
  // Context
  domain           String?
  context          Json?
  
  createdAt        DateTime @default(now())
  
  @@index([userId])
  @@index([operationType])
  @@index([approved])
  @@index([createdAt])
  @@index([domain])
  @@map("audit_logs")
}

// System Control for Emergency Circuit Breaker
model SystemControl {
  id                    String   @id @default(cuid())
  integrityLevel        String   @default("NORMAL") // NORMAL, WARNING, CRITICAL, LOCKED
  circuitBreakerActive  Boolean  @default(false)
  manualOverride        Boolean  @default(false)
  lockReason            String?
  lockedBy              String?  // Admin user ID who activated manual lock
  lockedAt              DateTime?
  
  // System metrics
  totalPendingTransfers Int      @default(0)
  totalFrozenValue      Float    @default(0)
  anomalyCount          Int      @default(0)
  lastAnomalyDetected   DateTime?
  
  updatedAt             DateTime @updatedAt
  createdAt             DateTime @default(now())
  
  @@map("system_control")
}

// Transfer tracking for inter-domain transfers
model Transfer {
  id                String   @id @default(cuid())
  sourceUserId      String
  targetUserId      String
  sourceDomain      String
  targetDomain      String
  amount            Float
  currency          String   @default("PI")
  
  status            String   @default("PENDING") // PENDING, APPROVED, COMPLETED, FROZEN, REJECTED
  
  // Dual forensic check
  sourceAuditId     String?
  targetAuditId     String?
  sourceApproved    Boolean  @default(false)
  targetApproved    Boolean  @default(false)
  
  // Risk assessment
  riskLevel         String?
  suspicious        Boolean  @default(false)
  
  // Timestamps
  createdAt         DateTime @default(now())
  approvedAt        DateTime?
  completedAt       DateTime?
  frozenAt          DateTime?
  
  @@index([sourceUserId])
  @@index([targetUserId])
  @@index([status])
  @@index([createdAt])
  @@index([sourceDomain])
  @@index([targetDomain])
  @@map("transfers")
}
