# ============================================
# TEC ECOSYSTEM - ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# ============================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production example: NEXT_PUBLIC_APP_URL=https://tec-ecosystem.vercel.app

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/tec_ecosystem?schema=public"

# ============================================
# AUTHENTICATION (Required)
# ============================================
# Base URL for NextAuth
NEXTAUTH_URL=http://localhost:3000
# Production example: NEXTAUTH_URL=https://tec-ecosystem.vercel.app

# Secret key for JWT encryption (generate with: openssl rand -base64 32)
# ⚠️ IMPORTANT: Generate a new secret before deploying to production!
NEXTAUTH_SECRET=

# ============================================
# PI NETWORK (Required)
# ============================================
# Environment: testnet or mainnet
NEXT_PUBLIC_PI_NETWORK=testnet

# Your Pi Network App ID (from Pi Developer Portal)
# Example: tec-titan-elite-commerce-04d84accdca2487c
NEXT_PUBLIC_PI_APP_ID=your-pi-app-id

# Enable sandbox mode for testing (true for testnet, false for mainnet)
NEXT_PUBLIC_PI_SANDBOX=true
PI_SANDBOX_MODE=true

# Pi API Key (get from Pi Developer Portal - Required for production payments)
# For sandbox: sandbox_pi_xxxxxxxxxxxxxxxxxx
# For production: pi_xxxxxxxxxxxxxxxxxx
PI_API_KEY=your_pi_api_key_here

# Pi API Secret (get from Pi Developer Portal)
PI_API_SECRET=your_pi_api_secret_here

# Pi Validation Key (Required for Pi Platform verification)
# This key is used to verify your app with Pi Platform
# Get from: Pi Developer Portal → Your App → Settings → Validation Key
PI_VALIDATION_KEY=your_pi_validation_key_here

# Pi Sandbox ID (for testnet/sandbox environment)
# Get from: Pi Developer Portal → Your App → Sandbox Settings
PI_SANDBOX_ID=your_sandbox_id_here

# Pi Wallet Address (optional - for receiving payments)
PI_WALLET_ADDRESS=your_wallet_address_here

# ============================================
# TEC NEXUS AI (Optional)
# ============================================
# OpenAI API Key for AI features
# OPENAI_API_KEY=sk-...

# ============================================
# EMAIL SERVICE (Optional but recommended)
# ============================================
# Email provider: console (default), smtp, sendgrid, aws_ses
EMAIL_PROVIDER=console

# SMTP configuration for sending emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@tec-ecosystem.com

# SendGrid configuration
# SENDGRID_API_KEY=SG.xxxxx

# Default sender email
EMAIL_FROM=noreply@tec-ecosystem.com

# ============================================
# FORENSIC AUDIT SYSTEM (Security)
# ============================================
# Enable forensic audit for financial operations
NEXT_PUBLIC_ENABLE_FORENSIC_AUDIT=true

# Forensic audit log encryption key (generate with: openssl rand -base64 32)
# ⚠️ IMPORTANT: Generate a new secret before deploying to production!
FORENSIC_AUDIT_SECRET=

# Maximum transaction amount before requiring additional verification
FORENSIC_AUDIT_HIGH_RISK_THRESHOLD=10000

# Enable immutable audit logging
FORENSIC_AUDIT_IMMUTABLE_LOGS=true

# ============================================
# SOVEREIGN CONTROL SYSTEM (Required for /apps domains)
# ============================================
# Sovereign email for major transaction approvals and notifications
# All transactions >= 10,000 PI will be notified to this email
SOVEREIGN_EMAIL=yasserrr.fox17@gmail.com

# Enable ForensicLogger for all domains
FORENSIC_LOGGING_ENABLED=true

# Enable ApprovalCenter for all domains
APPROVAL_CENTER_ENABLED=true

# Approval API endpoint (defaults to /api/approval)
# APPROVAL_API_ENDPOINT=/api/approval

# Approval thresholds (in PI)
AUTO_APPROVE_AMOUNT=1000
MANUAL_REVIEW_AMOUNT=10000
CRITICAL_AMOUNT=50000

# Emergency circuit breaker (for system-wide lock)
CIRCUIT_BREAKER_ENABLED=true
