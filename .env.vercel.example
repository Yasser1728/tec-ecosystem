# ============================================
# VERCEL ENVIRONMENT VARIABLES
# Copy these to Vercel Dashboard → Settings → Environment Variables
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://tec-ecosystem.vercel.app

# ============================================
# DATABASE (Required) - Use Vercel Postgres or External Provider
# ============================================
# PostgreSQL connection string
# Get from: Vercel Postgres or Railway/Supabase/Neon
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&pgbouncer=true&connection_limit=1

# ============================================
# AUTHENTICATION (Required)
# ============================================
NEXTAUTH_URL=https://tec-ecosystem.vercel.app
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=YOUR_SECURE_SECRET_HERE_GENERATE_WITH_OPENSSL

# ============================================
# PI NETWORK (Required)
# ============================================
NEXT_PUBLIC_PI_NETWORK=mainnet
NEXT_PUBLIC_PI_APP_ID=tec-titan-elite-commerce-04d84accdca2487c
NEXT_PUBLIC_PI_SANDBOX=false
PI_SANDBOX_MODE=false

# Pi API Credentials (Get from Pi Developer Portal)
PI_API_KEY=your_production_pi_api_key
PI_API_SECRET=your_production_pi_api_secret
PI_WALLET_ADDRESS=your_production_wallet_address

# ============================================
# SOVEREIGN CONTROL SYSTEM (Required)
# ============================================
SOVEREIGN_EMAIL=yasserrr.fox17@gmail.com
FORENSIC_LOGGING_ENABLED=true
APPROVAL_CENTER_ENABLED=true
FORENSIC_AUDIT_SECRET=YOUR_AUDIT_SECRET_GENERATE_WITH_OPENSSL

# Approval Thresholds (in PI)
AUTO_APPROVE_AMOUNT=1000
MANUAL_REVIEW_AMOUNT=10000
CRITICAL_AMOUNT=50000
FORENSIC_AUDIT_HIGH_RISK_THRESHOLD=10000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_FORENSIC_AUDIT=true
FORENSIC_AUDIT_IMMUTABLE_LOGS=true

# ============================================
# OPTIONAL: AI SERVICES
# ============================================
# OPENAI_API_KEY=sk-your-openai-key

# ============================================
